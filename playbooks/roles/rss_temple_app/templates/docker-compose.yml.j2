version: '3.9'

x-rss-temple-app-image: &rss-temple-app-image
  image: 'murraychristopherson/rss_temple_app:{{ docker_version }}'

services:
  {{ app_docker_service_prefix }}caddy-rss_temple_app:
    <<: *rss-temple-app-image
    restart: always
    expose:
      - '4200'
    volumes:
      - caddy_data:/data/
      - caddy_config:/config/
      - ./Caddyfile:/etc/caddy/Caddyfile
    networks:
      - default
      - rss_temple_net
volumes:
  caddy_data:
  caddy_config:
networks:
  rss_temple_net:
    external: true
